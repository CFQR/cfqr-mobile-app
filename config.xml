        <!-- <icon src="res/ios/icon-50.png" width="50" height="50" />
            <icon src="res/ios/icon-50@2x.png" width="100" height="100" /> -->
    </platform>
    <platform name="tizen">
        <icon src="www/icons/128x128.png" width="128" height="128" />
    </platform>
    <platform name="windows8">
        <icon src="www/icons/ms-icon150x150.png" width="150" height="150" />
    </platform>
</widget>
